<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
  <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backColorPage"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:textAlignment="center"
        tools:context=".MainActivity">







      <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="فرم عضویت"

            android:textColor="@android:color/white"
            android:textSize="@dimen/headerTextSize" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nameTIL"
            style="@style/textInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            >

            <EditText
                android:id="@+id/nameEditText"
                style="@style/FormParameter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_person_white_36dp"
                android:drawablePadding="8dp"
                android:hint="نـــام"
                android:inputType="textPersonName"
                android:textDirection="rtl" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/phoneTIL"
            style="@style/textInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <EditText
                android:id="@+id/editText3"
                style="@style/FormParameter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@android:drawable/ic_menu_call"
                android:drawablePadding="8dp"
                android:hint="شماره همراه"
                android:inputType="textEmailAddress"

                android:textDirection="rtl" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/mailTIL"
            style="@style/textInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            >

            <EditText
                android:id="@+id/mailEditText"
                style="@style/FormParameter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@android:drawable/ic_dialog_email"
                android:drawablePadding="8dp"
                android:hint="ادرس ایمیل"
                android:inputType="textEmailAddress"
                android:textDirection="rtl" />
        </android.support.design.widget.TextInputLayout>

        <Button

            android:id="@+id/button2"
            android:theme="@style/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
                      android:layout_marginBottom="150dp"
            android:text="تایید"

            />

  </LinearLayout>        </ScrollView>